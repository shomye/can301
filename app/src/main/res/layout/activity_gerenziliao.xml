<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.itcast.recycleview.gerenziliaoActivity">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="20dp"
        android:text="个person资料"
        android:textColor="@color/white"
        android:background="@drawable/home_bg"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/imaget"
        android:layout_below="@+id/text1"
        android:background="@drawable/home_bg"/>
    <ImageView
        android:id="@+id/fanhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_arrow_back_blackdp"
        />

    <TextView
        android:id="@+id/ziliao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
       android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:text="编辑个person资料"
        android:layout_toRightOf="@+id/imageView"
        android:textColor="@android:color/white"
        android:textSize="18dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您好，尊敬的用户"
        android:textColor="@color/white"
        android:layout_below="@+id/ziliao"
        android:textSize="18dp"
        android:layout_alignLeft="@+id/ziliao"
        android:id="@+id/t3"

        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/liui" />
    <LinearLayout
        android:id="@+id/shouji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ningcheng"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark" />
        <TextView
            android:id="@+id/shoujihao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/background_dark" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/jiantou"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shouji"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账号与安全"
            android:textSize="18dp"

            android:textColor="@android:color/background_dark"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/xiugai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码/注销"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/jiantou"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ningcheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imaget"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="18dp"
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/xiugaimingzi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/jiantou"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/youxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zhanghao"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textSize="18dp"
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/xiugaiyouxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/jiantou"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tuichu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/youxiang">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:background="@drawable/jiantou" />
    </LinearLayout>
</RelativeLayout>
