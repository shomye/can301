<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="cn.itcast.recycleview.DingdanActivity">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="20dp"
        android:text="酒店订单详情"
        android:textColor="@color/white"
        android:background="@drawable/home_bg"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/fanhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_arrow_back_blackdp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="20dp"
        android:text="预订成功"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:id="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="11dp"
        android:text="订单预定成功，祝您出游愉快"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:id="@+id/textView7" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/i2"
            android:background="@drawable/tishi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/i2"
            android:text="温馨提示"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t1"
            android:text="· 不允许携带宠物"
            android:layout_below="@+id/i2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/dimgray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t2"
            android:text="· 14:00以后入住 12:00以前退房"
            android:layout_below="@+id/t1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/dimgray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t3"
            android:text="· 提供free洗漱用品"
            android:layout_below="@+id/t2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/dimgray"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/r1"
        android:layout_marginTop="30dp"
        android:hint="景区名字"
        android:textColor="#FF8F03"
        android:textSize="18dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格:"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/name"
        android:layout_toLeftOf="@+id/buy"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:hint="景区价格"
        android:textColor="@color/dodgerblue"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="19dp"
        android:hint="景区介绍"
        android:textSize="16dp" />

    <Button
        android:id="@+id/daohang"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_button"
        android:text="Start Navigation"
        />

    <Button
        android:id="@+id/tuiding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/daohang"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="退订"
        android:background="@drawable/round_button"

        style="@style/Widget.AppCompat.Button.Borderless" />
</RelativeLayout>
